<html>
  #set global $pageTitle = "User Administration (%s)" % $user.username
  #include $lookupTemplate("head.inc")
  <body>
    <script type="text/javascript" src="/js/UserAdminResource.js"></script>
    <h1>$title</h1>
    <p><a href="/user-admin/">Up</a></p>
    <h2>Roles</h2>
    <ul>
      #if len($user.roles) == 0
      No roles assigned
      #else
      #for $role in $user.roles
      <li><a href="/role-admin/$role">$role</a></li>
      #end for
      #end if
    </ul>
    <h2>Permissions</h2>
    <ul>
      #if len($user.permissions) == 0
      No permissions assigned
      #else
      #for $permission in $user.permissions
      <li>$permission</li>
      #end for
      #end if
    </ul>
    <p><button type="button" id="delete-user">Delete user</button></p>
  </body>
</html>
