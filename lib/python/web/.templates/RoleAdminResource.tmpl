<html>
  #set global $pageTitle = "Role Administration (%s)" % $role.name
  #include $lookupTemplate("libhead.inc")
  <body>
    <script type="text/javascript" src="/libjs/RoleAdminResource.js"></script>
    <h1>$title</h1>
    <p><a href="..">Up</a></p>
    <input type="hidden" id="name" value="$role.name"/>
    <h2>Permissions</h2>
    <ul>
      #if len($role.permissions) == 0
      No permissions assigned
      #else
      #for $permission in $role.permissions
      <li>$permission</li>
      #end for
      #end if
    </ul>
    <p><button type="button" id="delete-role">Delete role</button></p>
  </body>
</html>
